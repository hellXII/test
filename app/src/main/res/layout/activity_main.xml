<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SuperFit"
        android:textSize="83dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:paddingBottom="45dp"
        android:fontFamily="@font/montserratbold"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="50dp">

        <EditText
            android:id="@+id/UserName"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#50ffffff"
            android:hint="UserName"
            android:paddingTop="25dp"
            android:textColorHint="#90ffffff"
            android:textSize="20dp"
            android:fontFamily="@font/montserratlight"/>

        <EditText
            android:id="@+id/Email"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#50ffffff"
            android:hint="Email"
            android:paddingTop="25dp"
            android:textColorHint="#90ffffff"
            android:textSize="20dp"
            android:fontFamily="@font/montserratlight"/>

        <EditText
            android:id="@+id/Code"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#50ffffff"
            android:hint="Code"
            android:paddingTop="25dp"
            android:textColorHint="#90ffffff"
            android:textSize="20dp"
            android:fontFamily="@font/montserratlight"/>

        <EditText
            android:id="@+id/RepeatCode"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#50ffffff"
            android:hint="RepeatCode"
            android:paddingTop="25dp"
            android:textColorHint="#90ffffff"
            android:textSize="20dp"
            android:fontFamily="@font/montserratlight"/>
    </LinearLayout>

    <Button
        android:id="@+id/signUp"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:background="#00ffffff"
        android:drawableRight="@drawable/arrowright"
        android:fontFamily="@font/montserratextrabold"
        android:onClick="onClick1"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textSize="20dp" />

    <Button
        android:id="@+id/signIn"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:background="#00ffffff"
        android:drawableLeft="@drawable/arrowleft"
        android:onClick="onClick"
        android:text="Sign In"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:textStyle="bold"
        android:fontFamily="@font/montserratextrabold"/>
</LinearLayout>